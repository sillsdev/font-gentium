# TODO: remove later, just for providing debug data during devlopment
def kpairs() {
  # l = [('@public.kern1.LCapTopT', '@public.kern2.RSmCurve', '-90')]
  l = kerninfo(0) # one arg required (not used so can be anything)
  return l
} kpairs;

# TODO: include this data from an external file where it's easier to maintain
def unkpairs() {
  l = [
    ('@public.kern1.LCapTopT', '@public.kern2.RSmCurve')
  ]
  return l
} unkpairs;

lookup kernpairs {
  lookupflag IgnoreMarks;
    kernpairs;
} kernpairs;

do
  let u = unkpairs();
  # let k = kpairs(); # for debugging
  let k = kerninfo(0); # one arg required (not used so can be anything)
  forlet p = u;
  let k1, k2 = p;
  forlet q = k;
  let g1, g2, n = q;
  let n = -n;
  if k1 == g1 and k2 == g2; # no way to terminate inner loop
  {
  lookup kernpairs_undo_ctx {
    pos $g1' $n $g2;
  } kernpairs_undo_ctx;
  }

# TODO: include this data from an external file where it's easier to maintain
# contextual kerning mainly for base+base+mark
# Currently only for testing
lookup kern_ctx {
    pos @public.kern1.LCapTopT' 45 @public.kern2.RSmCurve CombDiaer;
} kern_ctx;

feature kern {
  lookup kernpairs;
  lookup kernpairs_undo_ctx;
  lookup kern_ctx;
} kern;

